require 'rubygems'
require 'optparse'
require 'ey-deploy'

require 'json'

options = {:foo => ''}

opts = OptionParser.new do |opts|
  opts.banner = "Usage: ey-deploy [-r] [/path/to/repo]"
  opts.define_head "Deploying your codez"
  opts.separator '*'*80

  opts.on("-r", "--repo REPO", "Specify the git repo to deploy from.") do |repo|
    options[:repo] = repo
  end

end

opts.parse!

EyDeploy.deploy(options)



